<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="@dimen/space_size_250"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_graysolid"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_size_15"
            android:textColor="@color/black"
            android:textSize="@dimen/font_text_size_15"
            android:textStyle="bold"
            android:text="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_size_15"
            android:layout_marginRight="@dimen/space_size_15"
            android:lineSpacingExtra="@dimen/space_size_3"
            android:layout_marginTop="@dimen/space_size_15"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="账号已在其他设备上登录\n请重新登录"
            android:textSize="@dimen/font_text_size_18"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/forceoffline_ok_Tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_size_15"
            android:layout_marginTop="@dimen/space_size_15"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/font_text_size_13"
            android:textColor="@color/main_color">
        </TextView>
    </LinearLayout>

</RelativeLayout>