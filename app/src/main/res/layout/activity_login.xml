<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

   <include layout="@layout/layout_title_header"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_size_25"
    android:layout_marginTop="@dimen/space_size_25"
    android:text="您好，
欢迎来到才窝"
    android:textSize="@dimen/font_text_size_16"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_size_15"
        android:layout_marginRight="@dimen/space_size_15"
        android:layout_marginTop="@dimen/space_size_30"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入手机号"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_0.5"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/space_size_20"
        android:layout_marginRight="@dimen/space_size_20"
        android:layout_marginTop="@dimen/space_size_8"
        />

</LinearLayout>