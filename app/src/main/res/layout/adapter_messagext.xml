<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/adapter_messagext_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_size_15"
        android:layout_marginRight="@dimen/space_size_15"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="显示数据显示数据显示数据显示数据显示数据显示数据显示数据显示数据" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapter_messagext_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/adapter_messagext_detail"
            android:text="2018-09-09" />

        <TextView
            android:id="@+id/adapter_messagext_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/space_size_15"
            android:layout_marginRight="@dimen/space_size_15"
            android:text="查看详情" />
    </RelativeLayout>
</LinearLayout>